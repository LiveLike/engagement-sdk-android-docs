<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="32dp"
    android:orientation="vertical"
    tools:context="com.livelike.livelikedemo.WidgetFrameworkTestActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

    <EditText
        android:id="@+id/input_widget_json"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:hint="input widget json received on pubnub" />

    <Button
        android:id="@+id/show_widget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="show widget"/>
    </LinearLayout>


    <com.livelike.engagementsdk.widget.view.WidgetView
        android:id="@+id/widget_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp" />


    <Button
        android:id="@+id/move_to_next_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="move to next state"/>


</LinearLayout>
