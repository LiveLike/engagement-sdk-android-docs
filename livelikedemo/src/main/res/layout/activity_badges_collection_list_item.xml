<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <ImageView
        android:id="@+id/badge_ic"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/badge_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/badge_ic"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/tick_ic"
        android:layout_width="16dp"
        android:layout_height="16dp"
        app:layout_constraintLeft_toRightOf="@id/badge_name_tv"
        app:layout_constraintTop_toTopOf="@id/badge_name_tv"
        android:src="@drawable/ic_baseline_check_box_24"/>


</androidx.constraintlayout.widget.ConstraintLayout>