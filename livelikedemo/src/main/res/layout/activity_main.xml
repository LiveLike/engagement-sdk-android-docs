<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"

        android:id="@+id/main_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">
            <android.support.v7.widget.CardView
                    android:id="@+id/layout_section"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                            android:id="@+id/layout_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="LAYOUT"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif-medium"
                            android:textStyle="normal"
                            android:textColor="#4db6ac"
                            android:lineSpacingExtra="10sp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="16dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            tools:text="LAYOUT"
                    />

                    <ImageView
                            android:id="@+id/layout_side_panel"
                            android:layout_width="160dp"
                            android:layout_height="160dp"
                            android:src="@drawable/side_panel"
                            android:layout_marginTop="16dp"
                            app:layout_constraintTop_toBottomOf="@id/layout_label"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/layout_overlay"
                    />
                    <ImageView
                            android:id="@+id/layout_overlay"
                            android:layout_width="160dp"
                            android:layout_height="160dp"
                            android:src="@drawable/overlay"
                            android:layout_marginTop="16dp"
                            app:layout_constraintTop_toBottomOf="@id/layout_label"
                            app:layout_constraintStart_toEndOf="@id/layout_side_panel"
                            app:layout_constraintEnd_toEndOf="parent"
                    />

                    <Button android:id="@+id/events_button"
                            android:layout_width="match_parent"
                            android:layout_height="75dp"
                            android:layout_marginTop="16dp"
                            app:layout_constraintTop_toBottomOf="@id/layout_side_panel"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:text="Events"
                            android:textSize="16sp"
                            android:fontFamily="sans-serif"
                            android:textStyle="normal"
                            android:textColor="#de000000"
                            android:textAlignment="viewStart"
                            android:lineSpacingExtra="8sp"
                            android:drawableEnd="@drawable/ic_keyboard_arrow_right_black_24dp"

                            tools:text="Events"
                            style="@style/Widget.AppCompat.Button.Borderless"
                            tools:layout_editor_absoluteX="0dp"/>

                </android.support.constraint.ConstraintLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                    android:id="@+id/standalone_section"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp">
                <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                            android:id="@+id/standalone_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="STANDALONE"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif-medium"
                            android:textStyle="normal"
                            android:textColor="#4db6ac"
                            android:lineSpacingExtra="10sp"

                            android:layout_marginStart="16dp"
                            android:layout_marginTop="16dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            tools:text="STANDALONE"
                    />
                    <Button
                            style="@style/Widget.AppCompat.Button.Borderless"
                            android:id="@+id/widgets_button"
                            android:layout_width="match_parent"
                            android:layout_height="75dp"

                            android:text="Widgets Only"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:textSize="16sp"
                            android:fontFamily="sans-serif"
                            android:textStyle="normal"
                            android:textColor="#de000000"
                            android:textAlignment="viewStart"
                            android:lineSpacingExtra="8sp"

                            app:layout_constraintTop_toBottomOf="@id/standalone_label"
                            tools:text="Widgets Only"
                    />

                    <View android:id="@+id/standalone_divider"
                          android:layout_width="wrap_content"
                          android:layout_height="1dp"
                          android:background="#de000000"
                          android:layout_marginStart="16dp"
                          app:layout_constraintTop_toBottomOf="@id/widgets_button"
                          app:layout_constraintStart_toStartOf="@id/widgets_button"
                    />
                    <Button
                            style="@style/Widget.AppCompat.Button.Borderless"
                            android:id="@+id/chat_button"
                            android:layout_width="match_parent"
                            android:layout_height="75dp"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:text="Chat Only"
                            android:textSize="16sp"
                            android:fontFamily="sans-serif"
                            android:textStyle="normal"
                            android:textColor="#de000000"
                            android:textAlignment="viewStart"
                            android:lineSpacingExtra="8sp"
                            app:layout_constraintTop_toBottomOf="@id/standalone_divider"
                            tools:text="Chat Only"
                    />
                </android.support.constraint.ConstraintLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                    android:id="@+id/settings_section"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">
                <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                            android:id="@+id/settings_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif-medium"
                            android:textStyle="normal"
                            android:textColor="#4db6ac"
                            android:lineSpacingExtra="10sp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="16dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:text="SETTINGS"
                            tools:text="SETTINGS"
                    />
                    <TextView
                            android:id="@+id/resize_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Resize"
                            android:textSize="16sp"
                            android:fontFamily="sans-serif"
                            android:textStyle="normal"
                            android:textColor="#de000000"
                            android:lineSpacingExtra="8sp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="16dp"
                            app:layout_constraintTop_toBottomOf="@id/settings_label"
                            app:layout_constraintStart_toStartOf="parent"
                            tools:text="Resize"
                    />
                    <Switch
                            android:layout_width="40dp"
                            android:layout_height="24dp"
                            android:id="@+id/switch1"
                            android:layout_marginEnd="16dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/resize_label"
                            app:layout_constraintBottom_toBottomOf="@id/resize_label"
                    />
                </android.support.constraint.ConstraintLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
