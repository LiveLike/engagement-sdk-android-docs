<?xml version="1.0" encoding="utf-8"?>

<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"

        android:id="@+id/main_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:focusableInTouchMode="true"
                      android:orientation="vertical">
            <android.support.v7.widget.CardView
                    android:id="@+id/layout_section"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                            style="@style/TestAppLabel"
                            android:id="@+id/layout_label"
                            android:text="@string/layout_label"

                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            tools:text="LAYOUT"
                    />

                    <ImageView
                            android:id="@+id/layout_side_panel"
                            android:layout_width="160dp"
                            android:layout_height="160dp"
                            android:src="@drawable/side_panel"
                            android:layout_marginTop="16dp"
                            android:contentDescription="@string/layout_side_content_description"
                            app:layout_constraintTop_toBottomOf="@id/layout_label"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/layout_overlay"
                    />
                    <ImageView
                            android:id="@+id/layout_overlay"
                            android:layout_width="160dp"
                            android:layout_height="160dp"
                            android:src="@drawable/sync"
                            android:layout_marginTop="16dp"
                            android:contentDescription="@string/layout_overlay_content_description"
                            app:layout_constraintTop_toBottomOf="@id/layout_label"
                            app:layout_constraintStart_toEndOf="@id/layout_side_panel"
                            app:layout_constraintEnd_toEndOf="parent"
                    />

                    <Button
                            style="@style/TestAppButton"
                            android:id="@+id/events_button"
                            android:layout_width="match_parent"
                            android:layout_height="75dp"
                            android:layout_marginTop="16dp"
                            app:layout_constraintTop_toBottomOf="@id/layout_side_panel"

                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:paddingBottom="24dp"
                            android:text="@string/events_btn_label"

                            android:drawableEnd="@drawable/ic_keyboard_arrow_right_black_24dp"
                            tools:text="Events"
                            />
                    <TextView
                            android:id="@+id/events_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/default_channel_label"
                            style="@style/TestAppButtonSubLabel"

                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:paddingTop="36dp"
                            app:layout_constraintTop_toTopOf="@id/events_button"
                            app:layout_constraintBottom_toBottomOf="@id/events_button"
                            app:layout_constraintStart_toStartOf="@id/events_button"
                            tools:text="Droid Demo Channel 1"
                    />

                    <Button
                        style="@style/TestAppButton"
                        android:id="@+id/themes_button"
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        android:layout_marginTop="16dp"
                        app:layout_constraintTop_toBottomOf="@id/events_button"

                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:paddingBottom="24dp"
                        android:text="@string/theme_btn_label"

                        android:drawableEnd="@drawable/ic_keyboard_arrow_right_black_24dp"
                        tools:text="Themes"
                        />
                    <TextView
                        android:id="@+id/themes_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/default_theme_label"
                        style="@style/TestAppButtonSubLabel"

                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:paddingTop="36dp"
                        app:layout_constraintTop_toTopOf="@id/themes_button"
                        app:layout_constraintBottom_toBottomOf="@id/themes_button"
                        app:layout_constraintStart_toStartOf="@id/themes_button"
                        tools:text="Select Theme"
                        />

                    <CheckBox
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/chk_show_dismiss"
                        android:layout_margin="6dp"
                        android:text="Show Notification For Allow Widget"
                        app:layout_constraintTop_toBottomOf="@+id/themes_label"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        />
                </android.support.constraint.ConstraintLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                    android:id="@+id/standalone_section"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp">
                <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                            style="@style/TestAppLabel"
                            android:id="@+id/standalone_label"
                            android:text="@string/standalone_label"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            tools:text="STANDALONE"
                    />
                    <Button
                            style="@style/TestAppButton"
                            android:id="@+id/widgets_only_button"
                            android:layout_width="match_parent"
                            android:layout_height="75dp"
                            android:text="@string/widgets_only_btn_label"
                            app:layout_constraintTop_toBottomOf="@id/standalone_label"
                            tools:text="Widgets Only"
                    />

                    <View android:id="@+id/standalone_divider"
                          android:layout_width="wrap_content"
                          android:layout_height="1dp"
                          android:background="@color/colorDivider"
                          android:layout_marginStart="16dp"
                          app:layout_constraintTop_toBottomOf="@id/widgets_only_button"
                          app:layout_constraintStart_toStartOf="@id/widgets_only_button"
                    />
                    <Button
                            style="@style/TestAppButton"
                            android:id="@+id/chat_only_button"
                            android:layout_width="match_parent"
                            android:layout_height="75dp"
                            android:text="@string/chat_only_btn_label"
                            app:layout_constraintTop_toBottomOf="@id/standalone_divider"
                            tools:text="Chat Only"
                    />
                </android.support.constraint.ConstraintLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                    android:id="@+id/settings_section"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">
                <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                            android:id="@+id/settings_label"
                            style="@style/TestAppLabel"

                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:text="@string/settings_label"
                            tools:text="SETTINGS"
                    />
                    <TextView
                            android:id="@+id/resize_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/resize_btn_label"
                            android:textSize="16sp"
                            android:fontFamily="sans-serif"
                            android:textStyle="normal"
                            android:textColor="#de000000"
                            android:lineSpacingExtra="8sp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="16dp"
                            app:layout_constraintTop_toBottomOf="@id/settings_label"
                            app:layout_constraintStart_toStartOf="parent"
                            tools:text="Nickname"
                    />

                    <EditText
                        android:maxLines="1"
                        android:inputType="text"
                        android:maxLength="20"
                        android:focusedByDefault="false"
                        android:id="@+id/nicknameText"
                        android:layout_width="250dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="16dp"
                        app:layout_constraintBottom_toBottomOf="@id/resize_label"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/resize_label"
                        app:layout_constraintVertical_bias="0.7" />

                    <LinearLayout
                        android:layout_marginTop="8dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/nicknameText"
                        android:layout_width="match_parent"
                        android:visibility="gone"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            style="@style/TestAppLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:text="Keyboard Auto Close on/off(Will work with turner theme only)"
                            tools:text="KEYBOARD ON/OFF"
                            />
                    <ToggleButton
                        android:id="@+id/toggle_auto_keyboard_hide"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:layout_gravity="center"
                        />
                    </LinearLayout>
                </android.support.constraint.ConstraintLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>
