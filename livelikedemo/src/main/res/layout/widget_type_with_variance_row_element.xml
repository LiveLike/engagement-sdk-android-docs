<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/standalone_section"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/widget_type_label"
            style="@style/TestAppLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/widgets_variance_1"
            style="@style/TestAppButton"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            app:layout_constraintTop_toBottomOf="@id/widget_type_label" />

        <View
            android:id="@+id/standalone_divider"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginStart="16dp"
            android:background="@color/colorDivider"
            app:layout_constraintStart_toStartOf="@id/widgets_variance_1"
            app:layout_constraintTop_toBottomOf="@id/widgets_variance_1" />

        <Button
            android:id="@+id/widgets_variance_2"
            style="@style/TestAppButton"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            app:layout_constraintTop_toBottomOf="@id/standalone_divider" />

        <View
            android:id="@+id/standalone_divider_2"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginStart="16dp"
            android:background="@color/colorDivider"
            app:layout_constraintStart_toStartOf="@id/widgets_variance_2"
            app:layout_constraintTop_toBottomOf="@id/widgets_variance_2" />

        <Button
            android:id="@+id/widgets_variance_3"
            style="@style/TestAppButton"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            app:layout_constraintTop_toBottomOf="@id/standalone_divider_2" />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>