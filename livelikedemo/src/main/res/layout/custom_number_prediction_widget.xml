<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageButton
        android:id="@+id/img_close"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginRight="15dp"
        android:layout_gravity="right"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/ic_close_white_24dp" />


    <LinearLayout
        android:id="@+id/title_view"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#4B0082"
        app:layout_constraintTop_toBottomOf="@+id/img_close"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:minLines="2"
            android:paddingLeft="16dp"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:text="how many tds will be scored" />


    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcyl_prediction_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#D3D3D3"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_view" />

    <TextView
        android:id="@+id/result_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rcyl_prediction_list"
        android:textStyle="bold"
        android:visibility="gone"
        android:textSize="18sp"
        android:text="bvnbvnbvbn"
        android:textColor="@color/cheer_meter_team2_color2"/>

    <Button
        android:id="@+id/btn_1"
        app:layout_constraintTop_toBottomOf="@+id/result_tv"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_gravity="left"
        android:background="#4B0082"
        android:scaleType="centerInside"
        android:text="Lock"
        android:textSize="12sp"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/livelike_white" />

    <Button
        android:id="@+id/claim_rewards"
        app:layout_constraintTop_toBottomOf="@+id/result_tv"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_gravity="left"
        android:background="#4B0082"
        android:textAllCaps="false"
        android:textSize="12sp"
        android:visibility="gone"
        android:scaleType="centerInside"
        android:text="Claim Reward"
        app:layout_constraintLeft_toRightOf="@+id/btn_1"
        android:textColor="@color/livelike_white" />


</androidx.constraintlayout.widget.ConstraintLayout>