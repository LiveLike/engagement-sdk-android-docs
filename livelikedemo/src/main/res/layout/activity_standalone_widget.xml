<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/widget_standalone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
    <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/widget_standalone"
            app:layout_constraintEnd_toEndOf="@+id/widget_standalone"
            app:layout_constraintTop_toTopOf="@+id/widget_standalone"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            app:theme="@style/ThemeOverlay.AppCompat.Dark"/>

    <com.livelike.engagementsdk.widget.view.WidgetView
            android:id="@+id/widget_view"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintStart_toStartOf="@id/toolbar"
            app:layout_constraintEnd_toEndOf="@id/toolbar"/>
    <ScrollView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/command_log_scrollview"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/widget_view"
            app:layout_constraintStart_toStartOf="@id/widget_view"
            app:layout_constraintEnd_toEndOf="@id/widget_view">
        <android.support.constraint.ConstraintLayout
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/container_command_and_log"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
            <android.support.v7.widget.CardView
                    android:id="@+id/command_card_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">
                <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                                             android:id="@+id/widget_command_view"
                                                             android:layout_width="match_parent"
                                                             android:layout_height="wrap_content"
                                                             app:layout_constraintTop_toTopOf="@id/command_card_view"
                                                             app:layout_constraintStart_toStartOf="@id/command_card_view"
                                                             app:layout_constraintEnd_toEndOf="@id/command_card_view">
                    <TextView
                            style="@style/TestAppLabel"
                            android:id="@+id/command_label"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="@id/widget_command_view"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:text="@string/command"
                            app:layout_constraintHorizontal_bias="0.0"/>

                    <android.support.v7.widget.RecyclerView
                            android:id="@+id/widget_command"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintEnd_toEndOf="@id/command_label"
                            app:layout_constraintStart_toStartOf="@id/command_label"
                            app:layout_constraintTop_toBottomOf="@id/command_label"
                            app:layout_constraintBottom_toBottomOf="@id/widget_command_view"
                            app:layout_constraintHorizontal_bias="0.498"
                            app:layout_constraintVertical_bias="0.168"
                            android:layout_marginTop="8dp"/>
                </android.support.constraint.ConstraintLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                    android:id="@+id/log_card_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/command_card_view"
                    app:layout_constraintStart_toStartOf="@id/command_card_view"
                    app:layout_constraintEnd_toEndOf="@id/command_card_view"
                    android:layout_marginTop="16dp">
                <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                                             android:id="@+id/widget_log_view"
                                                             android:layout_width="match_parent"
                                                             android:layout_height="wrap_content"
                                                             app:layout_constraintTop_toTopOf="@id/log_card_view"
                                                             app:layout_constraintStart_toStartOf="@id/log_card_view"
                                                             app:layout_constraintEnd_toEndOf="@id/log_card_view">
                    <TextView
                            style="@style/TestAppLabel"
                            android:id="@+id/log_label"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="@id/widget_log_view"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:text="@string/log"
                            app:layout_constraintHorizontal_bias="0.0"/>
                </android.support.constraint.ConstraintLayout>
            </android.support.v7.widget.CardView>
        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
