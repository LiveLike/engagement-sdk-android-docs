<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/standalone_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">
    <android.support.constraint.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                style="@style/TestAppLabel"
                android:id="@+id/widget_type_label"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
        <Button
                style="@style/TestAppButton"
                android:id="@+id/widgets_variance_1"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                app:layout_constraintTop_toBottomOf="@id/widget_type_label"/>

        <View android:id="@+id/standalone_divider"
              android:layout_width="wrap_content"
              android:layout_height="1dp"
              android:background="@color/colorDivider"
              android:layout_marginStart="16dp"
              app:layout_constraintTop_toBottomOf="@id/widgets_variance_1"
              app:layout_constraintStart_toStartOf="@id/widgets_variance_1"/>

        <Button
                style="@style/TestAppButton"
                android:id="@+id/widgets_variance_2"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                app:layout_constraintTop_toBottomOf="@id/standalone_divider"/>

        <View android:id="@+id/standalone_divider_2"
              android:layout_width="wrap_content"
              android:layout_height="1dp"
              android:background="@color/colorDivider"
              android:layout_marginStart="16dp"
              app:layout_constraintTop_toBottomOf="@id/widgets_variance_2"
              app:layout_constraintStart_toStartOf="@id/widgets_variance_2"/>
        <Button
                style="@style/TestAppButton"
                android:id="@+id/widgets_variance_3"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                app:layout_constraintTop_toBottomOf="@id/standalone_divider_2"/>
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>