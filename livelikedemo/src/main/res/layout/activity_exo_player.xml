<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ExoPlayerActivity">

    <include
            android:id="@+id/chatWidget"
            layout="@layout/widget_chat_stacked"
            android:layout_height="0dp"
            android:layout_width="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/logsPreview"/>

    <com.google.android.exoplayer2.ui.PlayerView
            android:id="@+id/playerView"
            android:layout_width="0dp"
            android:layout_height="140dp"
            app:resize_mode="fixed_height"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    <TextView
            android:layout_width="0dp"
            android:layout_height="17dp"
            android:id="@+id/videoTimestamp"
            app:layout_constraintStart_toStartOf="@+id/playerView"
            android:layout_marginStart="8dp"
            android:background="@color/colorPrimary"
            android:textColor="@color/text_color"
            android:textAlignment="center"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:id="@+id/selectChannelButton"
            android:text="@string/channel"
            android:layout_height="35dp"
            android:layout_width="100dp"
            android:visibility="visible"
            app:layout_constraintTop_toBottomOf="@+id/startAd"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="13sp"
            android:layout_marginLeft="8dp"/>

    <Button
        android:id="@+id/chat_room_button"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_marginStart="8dp"
        android:text="Chat Room"
        android:textSize="13sp"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selectChannelButton" />
    <Button
            android:id="@+id/startAd"
            android:text="Start Ad"
            android:layout_height="35dp"
            android:layout_width="100dp"
            android:visibility="visible"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/videoTimestamp"
            android:textSize="13sp"
            android:layout_marginLeft="8dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:id="@+id/logsPreview"
            android:maxLength="500"
            android:background="@color/colorPrimary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/playerView"
            android:textAlignment="textStart"
            app:layout_constraintEnd_toStartOf="@+id/openLogs"
            android:gravity="start"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:maxLength="5000"
            android:id="@+id/fullLogs"
            android:scrollbars="vertical"
            android:background="@color/exo_error_message_background_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/playerView"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textAlignment="textStart"
            tools:text="ojokok"
            android:visibility="gone"
            android:textColor="#FFFFFF"
            android:gravity="start"/>
    <Button
            android:id="@+id/openLogs"
            android:text="Logs"
            android:layout_height="0dp"
            android:layout_width="46dp"
            android:visibility="visible"
            app:layout_constraintTop_toTopOf="@+id/logsPreview"
            app:layout_constraintBottom_toBottomOf="@+id/logsPreview"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="8sp"/>

</android.support.constraint.ConstraintLayout>
