<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".chatonly.ChatOnlyHomeFragment">

    <LinearLayout
        android:id="@+id/lay_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chat_toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/btn_create"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:text="Create"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/ed_chat_room_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:hint="Enter Room title"
                android:textColor="@android:color/white" />

            <ProgressBar
                android:id="@+id/prg_create"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:visibility="invisible" />

            <Button
                android:id="@+id/btn_visibility"
                android:layout_width="70dp"
                android:layout_height="34dp"
                android:text="Visibility"
                android:textSize="9sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/btn_join"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:text="Join"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/ed_chat_room_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:hint="Enter Room Id "
                android:textColor="@android:color/white" />

            <ProgressBar
                android:id="@+id/prg_join"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:visibility="invisible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/btn_mute_status"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:text="Mute status "
                android:textSize="12sp" />

            <ProgressBar
                android:id="@+id/prg_mute"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:visibility="invisible" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/btn_change"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:text="Change ChatRoom"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btn_refresh"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:text="Refresh ChatRoom List"
                android:textSize="12sp" />

            <ProgressBar
                android:id="@+id/prg_refresh"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:visibility="invisible" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/btn_delete"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:text="Remove User From ChatRoom"
                android:textSize="12sp" />

            <ProgressBar
                android:id="@+id/prg_delete"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:visibility="invisible" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_show_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show Chat View" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="5dp"
            android:text="Chat Room Listener"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_update_chat_room"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textColor="@android:color/white" />
    </LinearLayout>


</FrameLayout>