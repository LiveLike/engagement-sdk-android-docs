<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>


    </style>

    <style name="Default" parent="AppTheme">
        <item name="displayUserProfile">true</item>
        <item name="showMessageTime">true</item>
        <item name="chatAvatarCircle">true</item>
        <item name="chatAvatarRadius">20dp</item>
        <item name="chatBubbleWidth">wrap_content</item>
        <item name="chatBackgroundWidth">wrap_content</item>
        <item name="chatSendButtonPaddingLeft">10dp</item>
        <item name="chatSendButtonPaddingRight">10dp</item>
        <item name="chatSendButtonPaddingTop">6dp</item>
        <item name="chatSendButtonPaddingBottom">6dp</item>
        <item name="sendIconTintColor">#FFF</item>
        <item name="stickerIconTintColor">#FFF</item>
        <item name="chatBubbleMarginLeft">5dp</item>
        <item name="reaction_count_margin_right">30dp</item>
        <item name="chatBubbleMarginRight">25dp</item>
        <item name="chatAvatarMarginLeft">13dp</item>
        <item name="chatReactionPanelColor">@android:color/white</item>
        <item name="chatReactionRadius">12dp</item>
        <item name="chatSelectedReactionRadius">12dp</item>
        <item name="chatBubbleBackground">@drawable/ic_chat_message_bubble_rounded_rectangle</item>
        <item name="chatReactionMessageBubbleHighlightedBackground">
            @drawable/ic_chat_message_highlighted_bubble_rounded_rectangle
        </item>
        <item name="chatMessageTimeTextColor">@android:color/white</item>
        <item name="chatUserNameTextStyle">bold</item>
        <item name="chatReactionXPosition">120dp</item>
        <item name="chatReactionYPosition">-5dp</item>
        <item name="chatReactionPanelGravity">center|top</item>
    </style>

    <style name="MMLChatTheme">
        <item name="displayUserProfile">false</item>
        <item name="showMessageTime">true</item>
        <item name="chatBubbleWidth">match_parent</item>
        <item name="chatBackgroundWidth">0dp</item>
        <item name="chatBackground">#FFF</item>
        <item name="chatReactionMessageBackHighlightedBackground">#FFF</item>
        <item name="usernameColor">#171717</item>
        <item name="stickerIconTintColor">#1675E7</item>
        <item name="otherUsernameColor">#000</item>
        <item name="messageColor">#171717</item>
        <item name="chatInputViewBackground">#FFF</item>
        <item name="chatDisplayBackground">#fff</item>
        <item name="chatViewBackground">#FFF</item>
        <item name="chatInputTextColor">#8e8e93</item>
        <item name="chatInputTextSize">15sp</item>
        <item name="chatInputTextHintColor">#8e8e93</item>
        <item name="chatMarginBottom">3dp</item>
        <item name="chatMarginTop">10dp</item>
        <item name="chatMarginLeft">0dp</item>
        <item name="chatMarginRight">0dp</item>
        <item name="chatReactionElevation">6dp</item>
        <item name="chatReactionRadius">20dp</item>
        <item name="chatSelectedReactionRadius">14dp</item>
        <item name="chatReactionPanelColor">@android:color/white</item>
        <item name="chatReactionDisplayCountColor">#171717</item>
        <item name="chatAvatarCircle">false</item>
        <item name="chatAvatarHeight">40dp</item>
        <item name="chatAvatarWidth">40dp</item>
        <item name="chatAvatarGravity">top</item>
        <item name="chatAvatarMarginLeft">16dp</item>
        <item name="chatAvatarMarginRight">8dp</item>
        <item name="chatAvatarMarginBottom">0dp</item>
        <item name="chatAvatarMarginTop">0dp</item>
        <item name="sendButtonHeight">38dp</item>
        <item name="sendButtonWidth">38dp</item>

        <item name="chatSendButtonPaddingLeft">2dp</item>
        <item name="chatSendButtonPaddingRight">2dp</item>
        <item name="chatSendButtonPaddingTop">0dp</item>
        <item name="chatSendButtonPaddingBottom">0dp</item>
        <item name="userPicDrawable">@drawable/ic_user_pic</item>
        <item name="chatBubblePaddingLeft">0dp</item>
        <item name="chatBubblePaddingRight">16dp</item>
        <item name="chatBubblePaddingTop">0dp</item>
        <item name="chatBubblePaddingBottom">16dp</item>

        <item name="textColor">#000</item>
        <item name="rankValueTextColor">#000</item>
        <item name="stickerSelectedTabIndicatorColor">@color/livelike_black</item>
        <item name="stickerTabBackground">@color/livelike_white</item>
        <item name="stickerBackground">@color/livelike_white</item>
        <item name="stickerRecentEmptyTextColor">@color/livelike_black</item>
        <item name="chatMessageBottomBorderHeight">1dp</item>
        <item name="chatMessageBottomBorderColor">#efeff4</item>
        <item name="reaction_icon">@drawable/ic_chat_reaction_turner</item>
        <item name="chatStickerKeyboardSendDrawable">@drawable/ic_keyboard</item>
        <item name="reaction_hint_enable">true</item>
        <item name="reaction_icons_margin_top">0dp</item>
        <item name="reaction_icons_margin_bottom">18dp</item>
        <item name="reaction_icon_position_bottom">true</item>
        <item name="reaction_count_margin_top">0dp</item>
        <item name="reaction_count_margin_bottom">20dp</item>
        <item name="reaction_count_icons_position_bottom">true</item>
        <item name="reaction_icons_gap_factor">0.93</item>
        <item name="chatReactionModerationFlagVisible">true</item>
        <item name="chatUserNameCustomFontPath">fonts/RingsideExtraWide-Book.otf</item>
        <item name="chatUserNameTextAllCaps">true</item>
        <item name="chatUserNameTextSize">12sp</item>
        <item name="chatMessageCustomFontPath">fonts/RingsideRegular-Book.otf</item>
        <item name="chatMessageTextSize">14sp</item>
        <item name="chatMessageTimeTextSize">10sp</item>
        <item name="chatMessageTimeCustomFontPath">fonts/RingsideRegular-Book.otf</item>
        <item name="chatMessageTimeTextAllCaps">true</item>
        <item name="chatMessageTimeTextColor">#171717</item>
        <item name="chatReactionDisplayCountTextSize">10sp</item>
        <item name="chatReactionDisplayCountCustomFontPath">fonts/RingsideExtraWide-Black.otf</item>
        <item name="chatReactionDisplayCountTextStyle">bold</item>
        <item name="chatReactionDisplaySize">12dp</item>
        <item name="chatReactionXPosition">0dp</item>
        <item name="chatReactionYPosition">-55dp</item>
        <item name="chatReactionPanelGravity">right|bottom</item>
        <item name="chatReactionPanelCountColor">#171717</item>
        <item name="chatReactionPanelCountCustomFontPath">fonts/RingsideExtraWide-Black.otf</item>
        <item name="chatReactionPanelCountVisibleIfZero">false</item>
        <item name="chatMessageTimeTextLetterSpacing">0.1</item>
        <item name="chatMessageTextLetterSpacing">0.0</item>
        <item name="chatUserNameTextLetterSpacing">0.0</item>
        <item name="chatMessageLinkTextColor">#13D654</item>
        <item name="chatInputMaxCharLimit">10</item>
    </style>

    <style name="CustomChatReactionTheme" parent="Default">
        <item name="showMessageTime">false</item>
        <item name="chatReactionPanelColor">#5028a0</item>
        <item name="chatReactionDisplayCountColor">#ffffff</item>
        <item name="chatReactionMessageBubbleHighlightedBackground">
            @drawable/ic_chat_message_highlighted_bubble_rounded_rectangle
        </item>
        <item name="chatReactionFlagTintColor">@android:color/white</item>
        <item name="chatReactionPanelCountColor">@android:color/white</item>
        <item name="reaction_hint_enable">false</item>

    </style>

    <style name="TestAppLabel" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#4db6ac</item>
        <item name="android:lineSpacingExtra">10sp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TestAppButtonSubLabel" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#8b000000</item>
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TestAppButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#de000000</item>
        <item name="android:gravity">start|center</item>
        <item name="android:lineSpacingExtra">8sp</item>
    </style>

</resources>
