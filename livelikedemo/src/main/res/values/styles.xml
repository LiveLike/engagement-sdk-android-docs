<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>

    </style>

    <style name="Default" parent="AppTheme">
        <item name="displayUserProfile">true</item>
        <item name="showChatAvatarLogo">true</item>
        <item name="chatAvatarCircle">true</item>
        <item name="chatBubbleWidth">wrap_content</item>
        <item name="chatBackgroundWidth">wrap_content</item>
        <item name="chatSendButtonPaddingLeft">10dp</item>
        <item name="chatSendButtonPaddingRight">10dp</item>
        <item name="chatSendButtonPaddingTop">6dp</item>
        <item name="chatSendButtonPaddingBottom">6dp</item>
        <item name="sendIconTintColor">#FFF</item>
        <item name="stickerIconTintColor">#FFF</item>
        <item name="chatBubbleMarginLeft">5dp</item>
        <item name="chatAvatarMarginLeft">13dp</item>
        <item name="closeKeyboardOnSend">true</item>
        <item name="chatReactionPanelColor">@android:color/white</item>
        <item name="chatReactionRadius">18dp</item>
        <item name="chatBubbleBackground">@drawable/ic_chat_message_bubble_rounded_rectangle</item>
        <item name="chatReactionMessageBubbleHighlightedBackground">@drawable/ic_chat_message_highlighted_bubble_rounded_rectangle</item>
    </style>

    <style name="TurnerChatTheme" parent="AppTheme">
        <item name="displayUserProfile">true</item>
        <item name="chatBubbleWidth">match_parent</item>
        <item name="chatBackgroundWidth">0dp</item>
        <item name="chatBackground">#FFF</item>
        <item name="chatReactionMessageBackHighlightedBackground">#66502878</item>
        <item name="usernameColor">#000</item>
        <item name="stickerIconTintColor">#1675E7</item>
        <item name="otherUsernameColor">#000</item>
        <item name="messageColor">#5f5f5f</item>
        <item name="chatInputViewBackground">#FFF</item>
        <item name="chatDisplayBackground">#efeff4</item>
        <item name="chatViewBackground">#FFF</item>
        <item name="chatInputTextColor">#8e8e93</item>
        <item name="chatInputTextSize">15sp</item>
        <item name="chatInputTextHintColor">#8e8e93</item>
        <item name="chatMarginBottom">3dp</item>
        <item name="chatMarginTop">0dp</item>
        <item name="chatMarginLeft">0dp</item>
        <item name="chatMarginRight">0dp</item>
        <item name="chatReactionXPosition">120dp</item>
        <item name="chatReactionYPosition">25dp</item>
        <item name="chatReactionElevation">6dp</item>
        <item name="chatReactionRadius">20dp</item>
        <item name="chatReactionPanelColor">@android:color/white</item>
        <item name="chatInputBackground">@drawable/rounded_color_input_background</item>
        <item name="chatReactionDisplayCountColor">@android:color/black</item>
        <item name="showChatAvatarLogo">true</item>
        <item name="chatAvatarCircle">false</item>
        <item name="chatAvatarHeight">36dp</item>
        <item name="chatAvatarWidth">32dp</item>
        <item name="chatAvatarGravity">top</item>
        <item name="chatAvatarMarginLeft">16dp</item>
        <item name="chatAvatarMarginRight">5dp</item>
        <item name="chatAvatarMarginBottom">0dp</item>
        <item name="chatAvatarMarginTop">1dp</item>
        <item name="sendButtonHeight">38dp</item>
        <item name="sendButtonWidth">38dp</item>

        <item name="chatSendButtonPaddingLeft">2dp</item>
        <item name="chatSendButtonPaddingRight">2dp</item>
        <item name="chatSendButtonPaddingTop">0dp</item>
        <item name="chatSendButtonPaddingBottom">0dp</item>
        <item name="userPicDrawable">@drawable/ic_user_pic</item>
        <item name="chatSendDrawable">@drawable/ic_send_turner</item>
        <item name="chatSendBackground">@drawable/send_chat_blue_circle_back</item>
        <item name="chatBubblePaddingLeft">8dp</item>
        <item name="chatBubblePaddingRight">8dp</item>
        <item name="chatBubblePaddingTop">8dp</item>
        <item name="chatBubblePaddingBottom">8dp</item>

        <item name="textColor">#000</item>
        <item name="rankValueTextColor">#000</item>
        <item name="winAnimation">@string/win_animation_turner</item>
        <item name="loseAnimation">@string/lose_animation_turner</item>
        <item name="closeKeyboardOnSend">false</item>
    </style>

    <style name="CustomChatReactionTheme" parent="Default">
        <item name="chatReactionPanelColor">#5028a0</item>
        <item name="chatReactionDisplayCountColor">#ffffff</item>
        <item name="chatReactionMessageBubbleHighlightedBackground">@drawable/ic_chat_message_highlighted_bubble_rounded_rectangle</item>
        <item name="chatReactionFlagTintColor">@android:color/white</item>
        <item name="chatReactionPanelCountColor">@android:color/white</item>
    </style>

    <style name="TestAppLabel" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#4db6ac</item>
        <item name="android:lineSpacingExtra">10sp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TestAppButtonSubLabel" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#8b000000</item>
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="TestAppButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#de000000</item>
        <item name="android:gravity">start|center</item>
        <item name="android:lineSpacingExtra">8sp</item>
    </style>

</resources>
