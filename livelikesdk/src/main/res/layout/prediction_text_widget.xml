<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/prediction_text_widget_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                 xmlns:app="http://schemas.android.com/apk/res-auto"
                                                 android:id="@+id/prediction_text_widget"
                                                 android:layout_width="match_parent"
                                                 android:layout_height="wrap_content"
                                                 android:background="@android:color/darker_gray">
        <TextView
                android:id="@+id/prediction_question_textView"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:background="@drawable/top_rounded_corner"
                android:gravity="start|center_vertical"
                android:textColor="@color/text_color"
                android:textSize="@dimen/textView_text_size"
                android:text="@string/prediction_question"
                app:fontFamily="@font/titillium_bold"/>

        <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/prediction_pie_updater_animation"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                app:lottie_fileName="pie_updater_lottie_animation.json"
                app:layout_constraintStart_toStartOf="@+id/prediction_question_textView"
                app:layout_constraintEnd_toEndOf="@+id/prediction_question_textView"
                app:layout_constraintBottom_toBottomOf="@+id/prediction_question_textView"
                app:layout_constraintTop_toTopOf="@id/prediction_question_textView"
                app:layout_constraintHorizontal_bias="0.973"
                app:layout_constraintVertical_bias="0.592"/>

        <TextView
                android:id="@+id/prediction_confirm_message_textView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="26dp"
                android:layout_marginEnd="26dp"
                android:layout_marginTop="28dp"
                android:layout_marginBottom="36dp"
                android:elevation="4dp"
                android:textColor="#ffffff"
                android:background="@drawable/confirm_message_textview"
                android:gravity="center"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="30dp"
                android:paddingBottom="16dp"
                android:text="@string/prediction_confirm_message"
                app:fontFamily="@font/titillium_semibold"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.5"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintWidth_percent="0.8"
                android:visibility="invisible"/>

        <com.airbnb.lottie.LottieAnimationView
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:lottie_fileName="emoji-1.json"
                android:elevation="4dp"
                android:id="@+id/prediction_confirm_message_animation"
                app:layout_constraintStart_toStartOf="@id/prediction_confirm_message_textView"
                app:layout_constraintEnd_toEndOf="@id/prediction_confirm_message_textView"
                app:layout_constraintBottom_toBottomOf="@id/prediction_confirm_message_textView"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.1"
                app:layout_constraintHorizontal_bias="0.494"
                android:visibility="invisible"/>
    </android.support.constraint.ConstraintLayout>
</ScrollView>
