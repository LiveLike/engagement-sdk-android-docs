<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:id="@+id/prediction_text_widget"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             android:background="#99000000">
    <TextView
            android:id="@+id/prediction_question_textView"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="@drawable/top_rounded_corner"
            android:gravity="start|center_vertical"
            android:textColor="@color/text_color"
            android:textSize="@dimen/textView_text_size"
            app:fontFamily="@font/titillium_bold"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"/>

    <ViewStub
            android:id="@+id/prediction_pie"
            android:layout_width="18dp"
            android:layout_height="18dp"
            app:layout_constraintStart_toStartOf="@+id/prediction_question_textView"
            app:layout_constraintEnd_toEndOf="@+id/prediction_question_textView"
            app:layout_constraintBottom_toBottomOf="@+id/prediction_question_textView"
            app:layout_constraintTop_toTopOf="@id/prediction_question_textView"
            app:layout_constraintHorizontal_bias="0.973"
            app:layout_constraintVertical_bias="0.592"/>

    <TextView
            android:id="@+id/prediction_confirm_message_textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="26dp"
            android:layout_marginEnd="26dp"
            android:layout_marginTop="28dp"
            android:layout_marginBottom="36dp"
            android:elevation="4dp"
            android:textColor="#ffffff"
            android:background="@drawable/confirm_message_textview"
            android:gravity="center"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="30dp"
            android:paddingBottom="16dp"
            android:text="@string/prediction_confirm_message"
            app:fontFamily="@font/titillium_semibold"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintWidth_percent="0.8"
            android:visibility="invisible"/>

    <com.airbnb.lottie.LottieAnimationView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:elevation="4dp"
            android:id="@+id/prediction_confirm_message_animation"
            app:layout_constraintStart_toStartOf="@id/prediction_confirm_message_textView"
            app:layout_constraintEnd_toEndOf="@id/prediction_confirm_message_textView"
            app:layout_constraintBottom_toBottomOf="@id/prediction_confirm_message_textView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            android:visibility="invisible"/>

    <com.airbnb.lottie.LottieAnimationView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="4dp"
            android:id="@+id/prediction_result"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            android:visibility="invisible"/>

</android.support.constraint.ConstraintLayout>
