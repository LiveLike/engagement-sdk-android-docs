<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:id="@+id/prediction_image_widget">

    <android.support.v7.widget.RecyclerView
            android:id="@+id/image_optionList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/prediction_question_textView"
            app:layout_constraintHorizontal_bias="0.0"/>

    <TextView
            android:id="@+id/prediction_question_textView"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="@drawable/top_rounded_corner"
            android:gravity="start|center_vertical"
            android:textColor="@color/text_color"
            android:textSize="@dimen/textView_text_size"
            app:fontFamily="@font/titillium_bold"
            app:layout_constraintTop_toBottomOf="@+id/image_optionList"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="1.0"
            android:layout_marginTop="8dp"/>

    <include layout="@layout/confirm_message"
             android:id="@+id/confirm_message"/>

</android.support.constraint.ConstraintLayout>