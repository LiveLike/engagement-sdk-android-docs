<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bkgrd"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="@bool/livelike_widget_component_layout_transition_enabled"
    android:background="@drawable/answer_background_default">

    <FrameLayout
        android:id="@+id/imageButton_lay"
        android:layout_width="64dp"
        android:layout_height="64dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imgView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:adjustViewBounds="true"
            android:contentDescription="@string/image"
            tools:src="@tools:sample/avatars" />
    </FrameLayout>

    <TextView
        android:id="@+id/description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        app:layout_constraintStart_toEndOf="@id/imageButton_lay"
        app:layout_constraintLeft_toRightOf="@+id/imageButton_lay"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:fontFamily="@font/livelike_option_font"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:ellipsize="end"
        android:maxLines="2"
        app:layout_constraintRight_toLeftOf="@+id/increment_decrement_layout"
        app:layout_constraintEnd_toStartOf="@id/increment_decrement_layout"
        android:textColor="@color/livelike_option_text_color"
        android:textSize="@dimen/livelike_option_text_size"
        tools:text="blah blah blah blah blah  blah blah blha snbsbdfnsbndfbsnbfnsbdnbsdnfbnsdbf nvbv nnnbbnbnb nbmnbnbnmbnbnbnbnbnbnbnbnbnb"
        />

    <include
        android:id="@+id/increment_decrement_layout"
        layout="@layout/livelike_increment_decrement"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="16dp"
       />

</androidx.constraintlayout.widget.ConstraintLayout>
