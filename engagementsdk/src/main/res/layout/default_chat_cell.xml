<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="wrap_content"
                                             android:layout_height="wrap_content"
                                             android:animateLayoutChanges="true"
>

    <View
        android:id="@+id/chatBackground"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/ic_chat_message_bubble_rounded_rectangle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:id="@+id/chat_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            app:fontFamily="@font/livelike_chat_nickname_font"
            android:text="Terry"
            tools:text="@tools:sample/full_names"
            android:textColor="@color/livelike_default_chat_cell_name_color"
            android:textSize="@dimen/livelike_default_chat_cell_name_size"
            android:textStyle="bold"
            tools:ignore="HardcodedText"
            app:layout_constraintTop_toTopOf="@+id/chatBackground"
            app:layout_constraintStart_toStartOf="@+id/chatBackground"
            android:layout_alignParentLeft="true" android:layout_marginTop="8dp" android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:paddingRight="16dp"/>

    <TextView
        android:id="@+id/chatMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/chat_nickname"
        android:layout_alignStart="@id/chat_nickname"
        android:layout_alignLeft="@id/chat_nickname"
        android:layout_marginBottom="12dp"
        android:gravity="start"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:text="message"
        android:textAlignment="viewStart"
        android:textColor="@color/livelike_default_chat_cell_message_color"
        android:textSize="@dimen/livelike_default_chat_cell_text_size"
        app:fontFamily="@font/livelike_chat_message_font"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chat_nickname"
        tools:ignore="HardcodedText"
        tools:text="@tools:sample/lorem[30]" />


    <ImageView
            android:id="@+id/floatingUi"
            android:layout_width="46dp"
            android:layout_height="30dp"
            android:visibility="visible"
            android:src="@drawable/chat_ic_flag"
            android:background="@drawable/ic_chat_floating_ui"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:paddingLeft="8dp" android:paddingRight="8dp"/>

</android.support.constraint.ConstraintLayout>