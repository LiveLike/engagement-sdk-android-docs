<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--Widgets-->
    <item name="livelike_option_font"
          type="font">@font/roboto_regular</item>
    <item name="livelike_header_font"
          type="font">@font/roboto_bold</item>
    <item name="livelike_alert_body_font"
          type="font">@font/roboto_regular</item>
    <item name="livelike_alert_link_font"
          type="font">@font/roboto_bold</item>
    <item name="livelike_alert_label_font"
          type="font">@font/roboto_bold</item>

    <!--Chat-->
    <item name="livelike_chat_message_font"
          type="font">@font/roboto_regular</item>
    <item name="livelike_chat_nickname_font"
          type="font">@font/roboto_bold</item>


    <declare-styleable name="ChatView">
        <attr name="displayUserProfile" format="boolean" />
        <attr name="usernameColor" format="color"/>
        <attr name="otherUsernameColor" format="color"/>
        <attr name="messageColor" format="color"/>
        <attr name="chatBubbleBackground" format="reference|color"/>
        <attr name="chatWidth" format="dimension">
            <enum name="fill_parent" value="-1" />
            <enum name="match_parent" value="-1" />
            <enum name="wrap_content" value="-2" />
        </attr>
        <attr name="chatPaddingLeft" format="dimension"/>
        <attr name="chatPaddingRight" format="dimension"/>
        <attr name="chatPaddingTop" format="dimension"/>
        <attr name="chatPaddingBottom" format="dimension"/>
        <attr name="chatMarginLeft" format="dimension"/>
        <attr name="chatMarginRight" format="dimension"/>
        <attr name="chatMarginTop" format="dimension"/>
        <attr name="chatMarginBottom" format="dimension"/>
        <attr name="chatInputBackground" format="reference|color" />
        <attr name="chatReactionBackground" format="reference|color" />
        <attr name="chatInputTextColor" format="color" />
        <attr name="chatInputTextHintColor" format="color" />
        <attr name="chatInputTextSize" format="dimension" />
        <attr name="chatViewBackground" format="reference|color"/>
        <attr name="chatDisplayBackground" format="reference|color"/>
        <attr name="chatInputViewBackground" format="reference|color"/>
        <attr name="chatReactionYPosition" format="dimension"/>
        <attr name="chatReactionXPosition" format="dimension"/>
        <attr name="chatReactionElevation" format="dimension"/>
        <attr name="chatReactionRadius" format="dimension"/>
        <attr name="chatReactionBackgroundColor" format="color" />
        <attr name="chatReactionPadding" format="dimension" />
        <attr name="chatInputDrawableRight" format="reference"/>
    </declare-styleable>

    <declare-styleable name="PointView">
        <attr name="hidePlus" format="boolean" />
        <attr name="iconSize" format="dimension" />
        <attr name="textSize" format="dimension" />
    </declare-styleable>

    <declare-styleable name="ImageSlider">

        <attr name="progress_value" format="float" />
        <attr name="bar_progress_color_start" format="color" />
        <attr name="bar_progress_color_end" format="color" />
        <attr name="bar_result_color_center" format="color" />
        <attr name="bar_result_color_end" format="color" />
        <attr name="bar_track_color" />
        <attr name="allow_reselection" format="boolean" />
        <attr name="is_touch_disabled" format="boolean" />
        <attr name="register_touches_outside_thumb" format="boolean" />

    </declare-styleable>

</resources>