<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--Widgets-->
    <item name="livelike_option_font"
        type="font">@font/roboto_regular</item>
    <item name="livelike_header_font"
        type="font">@font/roboto_bold</item>
    <item name="livelike_alert_body_font"
        type="font">@font/roboto_regular</item>
    <item name="livelike_alert_link_font"
        type="font">@font/roboto_bold</item>
    <item name="livelike_alert_label_font"
        type="font">@font/roboto_bold</item>

    <!--Chat-->
    <item name="livelike_chat_message_font"
        type="font">@font/roboto_regular</item>
    <item name="livelike_chat_nickname_font"
        type="font">@font/roboto_bold</item>

    <declare-styleable name="WidgetView">
        <attr name="winAnimation" format="string"/>
        <attr name="loseAnimation" format="string"/>
        <attr name="drawAnimation" format="string"/>
    </declare-styleable>

    <declare-styleable name="ChatView">
        <attr name="displayUserProfile" format="boolean" />
        <attr name="showStickerSend" format="boolean" />
        <attr name="usernameColor" format="color"/>
        <attr name="otherUsernameColor" format="color"/>
        <attr name="sendIconTintColor" format="color"/>
        <attr name="stickerIconTintColor" format="color"/>
        <attr name="messageColor" format="color"/>
        <attr name="chatBubbleBackground" format="reference|color"/>
        <attr name="chatBackground" format="reference|color"/>
        <attr name="chatWidth" format="dimension">
            <enum name="fill_parent" value="-1" />
            <enum name="match_parent" value="-1" />
            <enum name="wrap_content" value="-2" />
        </attr>
        <attr name="sendButtonWidth" format="dimension">
            <enum name="fill_parent" value="-1" />
            <enum name="match_parent" value="-1" />
            <enum name="wrap_content" value="-2" />
        </attr>
        <attr name="sendButtonHeight" format="dimension">
            <enum name="fill_parent" value="-1" />
            <enum name="match_parent" value="-1" />
            <enum name="wrap_content" value="-2" />
        </attr>
        <attr name="chatBubblePaddingLeft" format="dimension"/>
        <attr name="chatBubblePaddingRight" format="dimension"/>
        <attr name="chatBubblePaddingTop" format="dimension"/>
        <attr name="chatBubblePaddingBottom" format="dimension"/>
        <attr name="chatSendButtonPaddingLeft" format="dimension"/>
        <attr name="chatSendButtonPaddingRight" format="dimension"/>
        <attr name="chatSendButtonPaddingTop" format="dimension"/>
        <attr name="chatSendButtonPaddingBottom" format="dimension"/>
        <attr name="chatMarginLeft" format="dimension"/>
        <attr name="chatMarginRight" format="dimension"/>
        <attr name="chatMarginTop" format="dimension"/>
        <attr name="chatMarginBottom" format="dimension"/>
        <attr name="chatBubbleMarginLeft" format="dimension"/>
        <attr name="chatBubbleMarginRight" format="dimension"/>
        <attr name="chatBubbleMarginTop" format="dimension"/>
        <attr name="chatBubbleMarginBottom" format="dimension"/>
        <attr name="chatInputBackground" format="reference|color" />
        <attr name="chatReactionBackground" format="reference|color" />
        <attr name="chatInputTextColor" format="color" />
        <attr name="chatInputTextHintColor" format="color" />
        <attr name="chatInputTextSize" format="dimension" />
        <attr name="chatViewBackground" format="reference|color"/>
        <attr name="chatDisplayBackground" format="reference|color"/>
        <attr name="chatInputViewBackground" format="reference|color"/>
        <attr name="chatReactionYPosition" format="dimension"/>
        <attr name="chatReactionXPosition" format="dimension"/>
        <attr name="chatReactionElevation" format="dimension"/>
        <attr name="chatReactionRadius" format="dimension"/>
        <attr name="chatReactionBackgroundColor" format="color" />
        <attr name="chatReactionPadding" format="dimension" />
        <attr name="chatSendDrawable" format="reference"/>
        <attr name="chatStickerSendDrawable" format="reference"/>
        <attr name="userPicDrawable" format="reference"/>
        <attr name="chatSendBackground" format="reference|color"/>
        <attr name="showChatAvatarLogo" format="boolean"/>
        <attr name="chatAvatarCircle" format="boolean"/>
        <attr name="closeKeyboardOnSend" format="boolean"/>
        <attr name="chatAvatarMarginRight" format="dimension"/>
        <attr name="chatAvatarMarginBottom" format="dimension"/>
        <attr name="chatAvatarMarginLeft" format="dimension"/>
        <attr name="chatAvatarMarginTop" format="dimension"/>
        <attr name="chatAvatarRadius" format="dimension"/>
        <attr name="chatAvatarWidth" format="dimension"/>
        <attr name="chatAvatarHeight" format="dimension"/>
        <attr name="chatAvatarGravity">
            <flag name="bottom" value="80" />
            <flag name="center" value="17" />
            <flag name="center_horizontal" value="1" />
            <flag name="center_vertical" value="16" />
            <flag name="clip_horizontal" value="8" />
            <flag name="clip_vertical" value="128" />
            <flag name="end" value="8388613" />
            <flag name="fill" value="119" />
            <flag name="fill_horizontal" value="7" />
            <flag name="fill_vertical" value="112" />
            <flag name="left" value="3" />
            <flag name="right" value="5" />
            <flag name="start" value="8388611" />
            <flag name="top" value="48" />
        </attr>
        <attr name="rankValueTextColor" format="color"/>
        <attr name="emptyChatBackgroundImage" format="reference"/>
    </declare-styleable>

    <declare-styleable name="PointView">
        <attr name="hidePlus" format="boolean" />
        <attr name="iconSize" format="dimension" />
        <attr name="textSize" format="dimension" />
        <attr name="textColor" format="color" />
    </declare-styleable>

    <declare-styleable name="ImageSlider">

        <attr name="progress_value" format="float" />
        <attr name="bar_progress_color_start" format="color" />
        <attr name="bar_progress_color_end" format="color" />
        <attr name="bar_result_color_center" format="color" />
        <attr name="bar_result_color_end" format="color" />
        <attr name="bar_track_color" />
        <attr name="allow_reselection" format="boolean" />
        <attr name="is_touch_disabled" format="boolean" />
        <attr name="register_touches_outside_thumb" format="boolean" />

    </declare-styleable>

</resources>