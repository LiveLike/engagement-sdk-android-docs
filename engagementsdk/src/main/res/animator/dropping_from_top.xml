<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android" android:ordering="together">
    <objectAnimator android:propertyName="translationY" android:duration="300"
                    android:valueFrom="60"
                    android:repeatCount="2"
                    android:valueTo="0" android:valueType="floatType" />

    <objectAnimator android:propertyName="alpha" android:duration="300"
                    android:valueFrom="0"
                    android:repeatCount="2"
                    android:interpolator="@android:interpolator/accelerate_cubic"
                    android:valueTo="255" android:valueType="intType" />
</set>