<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="wrap_content"
                                             android:animateLayoutChanges="true"
                                             android:layout_height="wrap_content">

    <View
            android:id="@+id/backgroundFloatingUI"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:clickable="false"
            android:focusable="false"
            android:visibility="visible"
            android:background="@drawable/ic_chat_floating_ui"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
    />


    <ImageView
            android:id="@+id/flagFloatingUI"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:visibility="visible"
            android:clickable="false"
            android:focusable="false"
            android:src="@drawable/chat_ic_flag"
            app:layout_constraintEnd_toEndOf="@id/backgroundFloatingUI"
            app:layout_constraintStart_toStartOf="@id/backgroundFloatingUI"
            app:layout_constraintBottom_toBottomOf="@id/backgroundFloatingUI"
            app:layout_constraintTop_toTopOf="@id/backgroundFloatingUI"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"/>



</android.support.constraint.ConstraintLayout>