<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:id="@+id/prediction_text_widget"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             android:background="#99000000">
    <TextView
            android:id="@+id/prediction_question_textView"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="@drawable/top_rounded_corner"
            android:textColor="@color/text_color"
            android:textSize="@dimen/textView_text_size"
            app:fontFamily="@font/titillium_bold"
            app:layout_constraintTop_toTopOf="parent"/>

    <android.support.v7.widget.RecyclerView
            android:id="@+id/option_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:layoutManager="android.support.v7.widget.LinearLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/prediction_question_textView"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <include layout="@layout/confirm_message"
             android:id="@+id/confirm_message"/>

</android.support.constraint.ConstraintLayout>
