<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             android:id="@+id/prediction_image_widget">

    <android.support.v7.widget.RecyclerView
            android:id="@+id/imageOptionList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="horizontal"
            tools:itemCount="2"
            tools:listitem="@layout/prediction_image_row_element"
            app:layout_constraintHorizontal_bias="0.0"/>

    <!--suppress AndroidDomInspection -->
    <TextView
            android:id="@+id/questionTextView"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:background="@drawable/prediciton_rounded_corner"
            android:textColor="@color/header_text_color"
            android:textSize="@dimen/livelike_header_text_size"
            app:fontFamily="@font/header_font"
            app:layout_constraintTop_toBottomOf="@+id/imageOptionList"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"
            tools:text="blah blah blah blah blah blah blah blah blah blah blah blah blah blah blah blah blah blah blah blah blah blah blah blah blah blah blah blah blah blah blah blah blah blah blah blah blah blah blah blah blah blah blah blah blah blah blah blah blah blah blah blah blah blah blah blah blah blah blah blah blah blah blah blah "
            android:textAlignment="textStart"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
    />

    <View
            android:id="@+id/closeButton"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:visibility="gone"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:background="@mipmap/widget_ic_x"
            tools:visibility="visible"
            app:layout_constraintTop_toTopOf="@id/questionTextView"
            app:layout_constraintEnd_toEndOf="@id/questionTextView"/>

    <include layout="@layout/confirm_message"
             android:id="@+id/confirm_message"
             app:layout_constraintTop_toTopOf="parent"
             app:layout_constraintBottom_toBottomOf="parent"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintEnd_toEndOf="parent"/>

</android.support.constraint.ConstraintLayout>