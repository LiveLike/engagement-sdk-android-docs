<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/progress">
        <scale android:scaleWidth="100%">
            <shape>
                <corners android:radius="@dimen/livelike_percent_bar_corner_radius"/>

                <gradient
                        android:angle="@integer/percent_bar_gradient_angle"
                        android:endColor="@color/livelike_neutral_bar_gradient_right"
                        android:startColor="@color/livelike_neutral_bar_gradient_left"
                        />
                <padding android:left="8dp"
                         android:right="8dp"
                         android:top="8dp"
                         android:bottom="8dp"/>
            </shape>
        </scale>
    </item>
</layer-list>