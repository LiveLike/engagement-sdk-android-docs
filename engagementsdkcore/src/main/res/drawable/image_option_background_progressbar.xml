<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <corners
                    android:radius="@dimen/percent_bar_corner_radius_image"/>

        </shape>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners
                        android:radius="@dimen/percent_bar_corner_radius_image"/>
                <gradient
                        android:startColor="@color/poll_bar_gradient_left"
                        android:centerY="1.0"
                        android:endColor="@color/poll_bar_gradient_right"
                        android:angle="@integer/image_option_percent_bar_gradient_angle"
                />
            </shape>
        </clip>
    </item>
</layer-list>