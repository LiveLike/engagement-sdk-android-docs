<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ChatView">
        <attr name="inputTextColor"
              format="color"/>
        <attr name="inputTextDefault"
              format="string"/>
        <attr name="displayTextColor"
              format="color"/>
        <attr name="displayTextHighlightColor"
              format="color"/>
        <attr name="displayTextBackground"
              format="reference"/>
    </declare-styleable>

    <item name="option_font" type="font" >@font/titillium_semibold</item>
    <item name="header_font" type="font" >@font/titillium_bold</item>
    <item name="alert_body_font" type="font" >@font/titillium_semibold</item>
    <item name="alert_link_font" type="font" >@font/titillium_semibold</item>
    <item name="alert_label_font" type="font" >@font/titillium_semibold</item>

    <declare-styleable name="TitleView">
        <attr name="titleText"
              format="string"/>
        <attr name="backgroundColor"
              format="color"/>
    </declare-styleable>

    <declare-styleable name="TextItemView">
        <attr name="text"
              format="string"/>
        <attr name="progress"
              format="integer"/>
        <attr name="bottomRoundedCorner"
              format="boolean"/>
        <attr name="selectionOutineColor"
              format="color"/>
        <attr name="backgroundColor"/>
    </declare-styleable>
</resources>