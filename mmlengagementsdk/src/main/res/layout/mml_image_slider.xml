<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/mml_background"
    android:orientation="vertical">

    <com.mml.mmlengagementsdk.widgets.utils.TimeBar
        android:id="@+id/time_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/widget_time_bar_height"
        android:background="@color/mml_time_bar_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/slider_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@color/mml_widget_title_color"
            android:textSize="15sp"
            android:textStyle="bold"
            tools:text="Who was graduated from UCLA?" />

        <com.mml.mmlengagementsdk.widgets.utils.imageslider.ImageSlider
            android:id="@+id/image_slider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:allow_reselection="true"
            app:register_touches_outside_thumb="true" />

        <TextView
            android:id="@+id/txt_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/timer_margin_top"
            android:textAllCaps="true"
            android:textColor="@color/mml_widget_title_color"
            android:textSize="10sp"
            tools:text="Jan 19,10:10 AM" />
    </LinearLayout>
</LinearLayout>