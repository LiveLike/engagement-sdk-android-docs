<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:adjustViewBounds="true"
    android:background="@drawable/mml_background"
    android:orientation="vertical">

    <com.mml.mmlengagementsdk.widgets.utils.TimeBar
        android:id="@+id/time_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/widget_time_bar_height"
        android:background="@color/mml_time_bar_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingTop="32dp"
        android:paddingRight="16dp"
        android:paddingBottom="32dp">

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:textColor="@color/mml_widget_title_color"
            android:textSize="15sp"
            android:textStyle="bold"
            tools:text="New Season All On Sale" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:lineSpacingExtra="6sp"
                android:textColor="@color/mml_widget_title_color"
                android:textSize="14sp"
                android:visibility="gone"
                tools:text="Up to 30% off at Warriors shop plus free shipping on orders over $29"
                tools:visibility="visible" />

            <ImageView
                android:id="@+id/img_alert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:visibility="gone"
                tools:visibility="visible" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_link"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/mml_rounded_solid_black_background"
            android:textAllCaps="true"
            android:textColor="@color/mml_alert_link_btn_text_color"
            android:visibility="gone"
            tools:text="SHOP NOW"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/txt_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/timer_margin_top"
            android:textAllCaps="true"
            android:textColor="@color/mml_widget_title_color"
            android:textSize="10sp"
            tools:text="Jan 19,10:10 AM" />
    </LinearLayout>
</LinearLayout>